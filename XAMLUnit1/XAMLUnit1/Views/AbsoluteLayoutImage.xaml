<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAMLUnit1.Views.AbsoluteLayoutImage">
    <ContentPage.Content >
        <AbsoluteLayout >
            <Image Source="http://lorempixel.com/1920/1080/nature/7" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"></Image>
            <Label Text="Relax" FontSize="30" HorizontalTextAlignment="Center" TextColor="White"  AbsoluteLayout.LayoutBounds="0.5,0.2,1,1" AbsoluteLayout.LayoutFlags="All"></Label>
              <BoxView Color="Black" Opacity="50" HeightRequest="100" 
                     AbsoluteLayout.LayoutBounds="1,1,1,0.2" AbsoluteLayout.LayoutFlags="All"></BoxView>
            
            <StackLayout 
                Padding="20,20,20,20"
                Orientation="Horizontal" AbsoluteLayout.LayoutBounds="1,1,1,0.2" AbsoluteLayout.LayoutFlags="All" HeightRequest="100">
                <Label FontSize="15" HorizontalOptions="Center" Text="Profile" TextColor="White"></Label>
                <Label FontSize="15" HorizontalOptions="CenterAndExpand" Text="Meditate" TextColor="White"></Label>
                <Label FontSize="15" HorizontalOptions="Center" Text="Theme" TextColor="White"></Label>
               
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>