<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAMLUnit1.Views.WelcomePageStackLayout" BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label Text="Welcome to Xamarin!"  TextColor="White"
             
                HorizontalOptions="CenterAndExpand"  FontSize="30" FontAttributes="Bold"/>

            <Label Text="Cross-platform apps made easy!!"  TextColor="White"
               
                HorizontalOptions="CenterAndExpand"  FontSize="18"/>

            <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White"></Button>

            <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>